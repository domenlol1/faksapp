rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Anyone can create, read, and delete from the pending_users collection.
    // This is required because the app does not use Firebase Authentication.
    match /pending_users/{userId} {
      allow read, create, delete: if true;
    }

    // All other documents are readable/writeable for a limited time.
    // This is the default rule.
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 2, 12);
    }
  }
}
